<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.acttos.androidstudy.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/catch_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="烎"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/down_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/catch_button"
            android:layout_centerHorizontal="true"
            android:text="↓" />
        <Button
            android:id="@+id/left_button"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/catch_button"
            android:layout_centerVertical="true"
            android:text="←" />
        <Button
            android:id="@+id/right_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/catch_button"
            android:layout_centerVertical="true"
            android:text="→" />

        <Button
            android:id="@+id/up_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@id/catch_button"
            android:layout_centerHorizontal="true"
            android:text="↑"
             />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
